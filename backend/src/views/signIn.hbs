<div class="form-div">

  {{#if error}}
  <div class="errors-wrapper">
    <span id="gr-word">{{this.error}}</span>
    <ul class="errors">
    </ul>
  </div>
  {{/if}}
</div>

<div class="form-div">
  <form class="form-form" method="post" action="/users/signIn" name="login">
    <label for="email">Email:</label>
    <input class="input-in-form" id="email" name="email" type="email">

    <label for="password" class="block mar-b-1">Password:</label>
    <input class="input-in-form" id="password" required id="password" name="password" type="password">

    <input class="btn-pos orange btn waves-effect waves-light" type="submit" value="Log In">
  </form>
</div>
